<% provide(:page_title, "YouFood - Acceuil") %>

<%= image_tag("food-image-small.jpg", alt: "Food picture") %>

<div class="authentication-form">
    <%= form_tag sessions_path do %>
        <fieldset>
            <legend>Connexion</legend>
            <div class="control-group">
                <%= label_tag(:email, "Email", class: "control-label") %>
                <div class="control">
                    <%= text_field_tag :email, params[:email] %>
                </div>
            </div>

            <div class="control-group">
                <%= label_tag(:password, "Mot de passe", class: "control-label") %>
                <div class="control">
                    <%= password_field_tag :password %>
                </div>
            </div>
            <hr/>
            <div class="control-group">
                <%= submit_tag("Se connecter", class: "btn btn-primary btn-large") %>
            </div>
        </fieldset>
    <% end %>
</div>