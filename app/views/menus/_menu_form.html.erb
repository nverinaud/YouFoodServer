<header class="page-header">
    <%= form.input :name, placeholder: "Nom du menu", input_html: {class: 'span4'} %>
</header>

<div class="row-fluid">
    <div class="span12">
        <%= form.input :description, placeholder: "Description", as: :text, input_html: {class: 'span10', rows: '5'} %>

        <div class="control-group">
            <label class="control-label" for="product_name">Produits</label>

            <div class="controls">
                <div class="input-append">
                    <input type="hidden" id="products_id" name="products_id"/>
                    <ul id="products_list" style="display: none" class="unstyled">
                        <% @menu.products.each do |product| %>
                            <%= content_tag "li", id: product.id do %>
                                <%= product.name %>
                            <% end %>
                        <% end %>
                    </ul>
                    <input id="product_autocomplete" type="text" class="span4" placeholder="Nom du produit" name="menu_products"/>
                    <a id="product_add" class="btn btn-primary">Ajouter</a>
                </div>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="product_name">Planifications</label>

            <div class="controls">
                <div class="input-append">
                    <select class="span4">
                        <%= options_for_select @schedule_options %>
                    </select>
                    <input type="submit" value="Planifier" class="btn btn-primary"/>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <%= form.button :submit, "Valider", class: 'btn-primary' %>
            <%= submit_tag 'Annuler', type: :reset, class: "btn" %>
        </div>
    </div>
</div>