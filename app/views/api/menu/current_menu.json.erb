{
    "current_menu":{
        "id":"<%= @menu.id %>",
        "name":"<%= @menu.name %>",
        "description":"<%= @menu.description %>"
    },
    "products":[
        <% @menu.products.each do |product| %>
        {
            "id":"<%= product.id %>",
            "name":"<%= product.name %>",
            "abbreviation":"<%= product.abbreviation %>",
            "description":"<%= product.description %>",
            "photo_url":"<%= product.photo.url %>",
            "price": <%= product.price %>,
            "category":{
                "id":"<%= product.category.id %>",
                "name":"<%= product.category.name%>"
            },
            "is_permanent":<%= product.permanent %>
        }
        <% if product != @menu.products.last %>
        ,
        <% end %>
        <% end %>
    ]
}